generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Departamento {
  id_departamentos Int       @id @default(autoincrement())
  nombre           String
  empleados        Empleado[]
  noticias         Noticia[]
}

model Empleado {
  id_empleados     Int       @id @default(autoincrement())
  id_departamento  Int
  nombre           String
  apellido         String
  fecha_nacimiento DateTime
  email            String    @unique
  contrase√±a       String
  rol              String    // Valores posibles: "empleado", "jefe", "gerente", etc.

  departamento     Departamento @relation(fields: [id_departamento], references: [id_departamentos])
  noticias         Noticia[]
}

model Noticia {
  id_noticias         Int          @id @default(autoincrement())
  id_empleados        Int
  id_departamentos    Int
  titulo              String
  contenido           String
  descripcion_general String
  color               String
  fecha_evento      DateTime     @default(now())

  creador             Empleado     @relation(fields: [id_empleados], references: [id_empleados])
  departamento        Departamento @relation(fields: [id_departamentos], references: [id_departamentos])
}

